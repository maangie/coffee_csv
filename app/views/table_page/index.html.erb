<div class="container-fluid">
  <p>
    <%= simple_form_for @number_of_rows do |f| %>
      <%= f.input :rows %>
      <%= f.button :submit, '行数指定' %>
    <% end %>
  </p>

  <% @numbers.each_with_index do |n, i| %>
    <div class="row" id="<%= "row#{i + 1}" %>">
      <%= simple_form_for n do |f| %>
        <div class="col-md-1"><%= f.input :col1 %></div>
        <div class="col-md-1"><%= f.input :col2 %></div>
        <div class="col-md-1"><%= f.input :col3 %></div>
        <div class="col-md-1"><%= f.input :col4 %></div>
      <% end %>
    </div>
  <% end %>

  <%= button_tag 'Export as CSV', class: 'btn btn-default' %>

  <pre id="result">
  </pre>

  <div hidden id="export_area">
    <%= link_to('ファイルに保存', '#',
                class: 'btn btn-default', download: "#{Date.today.to_s}.csv") %>
  </div>
</div>
